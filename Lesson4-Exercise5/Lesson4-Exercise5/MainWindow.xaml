<Window x:Class="Lesson4_Exercise5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson4_Exercise5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,89,0,0" TextWrapping="Wrap"
Text=" Select a message option and then choose the Display button."
VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloBtn" Content="Hello" HorizontalAlignment="Left" Margin="257,181,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="GoodbyeBtn" Content="Goodbye" HorizontalAlignment="Left" Margin="471,181,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.993,0.805"/>
        <CheckBox x:Name="chkYou" Content="You" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,256,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
